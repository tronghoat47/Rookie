@{
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProjectStructure.Domain.Models.Person

<form asp-area="NashTech" asp-action="Add" asp-controller="Rookie" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth">Date of Birth</label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthPlace">Birth Place</label>
        <input asp-for="BirthPlace" class="form-control" />
        <span asp-validation-for="BirthPlace" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsGraduated">Is Graduated?</label>
        <select asp-for="IsGraduated" class="form-control" asp-items="@(new SelectList(Model.GraduatedOption, "Key", "Description"))">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Gender">Gender</label>
        <select asp-for="Gender" asp-items="@(new SelectList(Model.GenderOption, "Key", "Description"))" class="form-control">
            <option>Please select gender</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Person</button>
</form>
